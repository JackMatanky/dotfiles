{
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git log:*)",
      "Bash(ls:*)",
      "Bash(eza:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(fd:*)",
      "Bash(bat:*)",
      "Bash(pwd)",
      "Bash(pre-commit run:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(pytest)"
    ],
    "ask": ["Bash(rm:*)", "Bash(git commit:*)"],
    "deny": ["Bash(sudo)", "Read(./secrets/**)"]
  },
  "env": {
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1",
    "USE_BUILTIN_RIPGREP": "0"
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "ctx7sk-5e6ebe3c-4d87-4162-bc7d-90ab92c88cc9"
      ]
    }
  }
}
