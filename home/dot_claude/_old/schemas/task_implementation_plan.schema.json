{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "~/.claude/schemas/task_implementation_plan.schema.json",
  "title": "Task Implementation Plan",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "plan", "reference", "task"],
  "properties": {
    "meta": {
      "$ref": "~/.claude/schemas/meta.schema.json"
    },
    "plan": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "version",
        "docType",
        "createdDateTime",
        "modifiedDateTime",
        "source"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "docType": {
          "type": "string",
          "const": "task-implementation-plan"
        },
        "createdDateTime": {
          "type": "string",
          "format": "date-time"
        },
        "modifiedDateTime": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string"
        },
        "source": {
          "type": "object",
          "additionalProperties": false,
          "required": ["steering_plan"],
          "properties": {
            "steering_plan": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "reference": {
      "type": "object",
      "additionalProperties": false,
      "required": ["project", "parent_task"],
      "properties": {
        "project": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "purpose", "objective", "pointer"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "purpose": {
              "type": "string",
              "minLength": 1
            },
            "objective": {
              "type": "string",
              "minLength": 1
            },
            "pointer": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "parent_task": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "purpose", "objective", "pointer"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "purpose": {
              "type": "string",
              "minLength": 1
            },
            "objective": {
              "type": "string",
              "minLength": 1
            },
            "pointer": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "task": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "order",
          "name",
          "purpose",
          "objective",
          "scope",
          "inputs",
          "outputs",
          "deliverables",
          "acceptance_criteria",
          "dependencies",
          "constraints",
          "risks",
          "test_guidance"
        ],
        "properties": {
          "order": {
            "type": "integer",
            "minimum": 1
          },
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "purpose": {
            "type": "string",
            "minLength": 1
          },
          "objective": {
            "type": "string",
            "minLength": 1
          },
          "rationale": {
            "type": "string"
          },
          "scope": {
            "type": "object",
            "additionalProperties": false,
            "required": ["include", "exclude"],
            "properties": {
              "include": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "exclude": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          },
          "assumptions": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "non_goals": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "interfaces": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "upstream": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "downstream": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "integration_notes": {
                "type": "string"
              }
            }
          },
          "deliverables": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "acceptance_criteria": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "constraints": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "risks": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "technical": {
                "$ref": "#/definitions/riskArray"
              },
              "development": {
                "$ref": "#/definitions/riskArray"
              },
              "integration": {
                "$ref": "#/definitions/riskArray"
              },
              "security": {
                "$ref": "#/definitions/riskArray"
              },
              "dependency": {
                "$ref": "#/definitions/riskArray"
              },
              "schedule": {
                "$ref": "#/definitions/riskArray"
              },
              "other": {
                "$ref": "#/definitions/riskArray"
              }
            }
          },
          "test_guidance": {
            "type": "object",
            "additionalProperties": false,
            "required": ["tdd", "methods", "requirements"],
            "properties": {
              "tdd": {
                "type": "boolean"
              },
              "methods": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "AAA",
                    "property-based",
                    "golden",
                    "mutation",
                    "integration",
                    "e2e"
                  ]
                }
              },
              "requirements": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "frameworks": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "coverage_target": {
                "type": ["number", "string"]
              },
              "notes": {
                "type": "string"
              }
            }
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  },
  "definitions": {
    "riskArray": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["description"],
        "properties": {
          "description": {
            "type": "string",
            "minLength": 1
          },
          "likelihood": {
            "type": "string"
          },
          "impact": {
            "type": "string"
          },
          "mitigation": {
            "type": "string"
          }
        }
      }
    }
  }
}
