{
  /* -------------------------------------------------------- */
  /*                      Global Settings                     */
  /* -------------------------------------------------------- */

  /* ------------------------- Fonts ------------------------ */
  "editor.fontFamily": "FiraCode Nerd Font Mono",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,

  "editor.insertSpaces": true,
  "editor.wordWrap": "on",

  /* --------------------- Bracket Pairs -------------------- */
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.experimentalGpuAcceleration": "on",
  "editor.foldingMaximumRegions": 10000,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.snippetSuggestions": "top",
  "editor.unicodeHighlight.ambiguousCharacters": false,

  "diffEditor.codeLens": true,

  "window.restoreWindows": "preserve",
  "window.newWindowProfile": "Default",

  /* ------------------- File Associations ------------------ */
  "files.associations": {
    "*.html": "html",
    "snippets/*.json": "jsonc",
    "*.nu": "nushell",
    "*.pgsql": "postgres",
    "brewf*": "ruby",
    "uv.lock": "toml",
    "ssh-config": "ssh_config"
  },

  /* ----------------- Security & Telemetry ----------------- */
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.feedback.enabled": false,
  "telemetry.telemetryLevel": "crash",

  //SEGMENT - Snippets
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  //!SEGMENT

  /* -------------------------------------------------------- */
  /*SECTION:                 Workbench                        */
  /* -------------------------------------------------------- */
  "workbench.commandPalette.experimental.enableNaturalLanguageSearch": false,

  "workbench.settings.applyToAllProfiles": [
    "editor.defaultFormatter",
    "workbench.commandPalette.experimental.suggestCommands",
    "workbench.externalBrowser",
    "python.analysis.inlayHints.variableTypes",
    "python.analysis.inlayHints.functionReturnTypes",
    "python.analysis.inlayHints.callArgumentNames",
    "notebook.defaultFormatter",
    "SQL-Formatter-VSCode.dataTypeCase",
    "SQL-Formatter-VSCode.denseOperators",
    "SQL-Formatter-VSCode.expressionWidth",
    "SQL-Formatter-VSCode.functionCase",
    "html.format.extraLiners",
    "vsicons.presets.hideExplorerArrows",
    "markdown.preview.lineHeight",
    "terminal.integrated.defaultProfile.osx",
    "terminal.integrated.defaultProfile.windows"
  ],

  "workbench.settings.openDefaultKeybindings": true,
  "workbench.externalBrowser": "safari", // "edge"
  "workbench.experimental.enableNewProfilesUI": true,
  "workbench.commandPalette.experimental.suggestCommands": true,
  //!SECTION

  /* -------------------------------------------------------- */
  /*SECTION:            Appearance & Theme                    */
  /* -------------------------------------------------------- */
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#89b4fa"
  },
  //SEGMENT - Theme
  "workbench.preferredDarkColorTheme": "Catppuccin Macchiato",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "catppuccin.accentColor": "blue",
  //!SEGMENT

  //SEGMENT - Icons
  // Grey - #90a4ae; Light Beige - #f7d88c; Darker Beige - #e6c04c
  "workbench.iconTheme": "vscode-icons",
  "material-icon-theme.activeIconPack": "none",
  "material-icon-theme.files.color": "#90a4ae",
  "material-icon-theme.folders.color": "#ddbb77",
  "material-icon-theme.folders.theme": "specific",
  //!SEGMENT

  //!SECTION

  /* -------------------------------------------------------- */
  /*SECTION:             Shell & Terminal                     */
  /* -------------------------------------------------------- */
  //SEGMENT - Nushell
  "[nushell]": {
    "editor.defaultFormatter": "constneo.vscode-nushell-format",
    "editor.autoIndent": "full",
    "editor.autoClosingBrackets": "always",
    "editor.bracketPairColorization.enabled": true,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "workbench.editor.languageDetection": true
  },
  "nushellLanguageServer.includeDirs": [
    "/Users/jack/dotfiles/nushell",
    "/Users/jack/dotfiles/nushell/aliases",
    "/Users/jack/dotfiles/nushell/completions",
    "/Users/jack/dotfiles/nushell/overlays",
    "/Users/jack/dotfiles/nushell/themes"
  ],
  "nushellLanguageServer.nushellExecutablePath": "nu",
  //!SEGMENT

  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.defaultProfile.windows": "Nushell",
  "terminal.integrated.defaultProfile.osx": "Nushell",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.enableImages": true,
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.ignoreProcessNames": [
    "starship",
    "oh-my-posh",
    "bash",
    "zsh",
    "nu"
  ],
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  //!SECTION

  /* -------------------------- SSH ------------------------- */
  "remote.SSH.configFile": "/Users/jack/dotfiles/ssh/ssh-config",
  "remote.SSH.showLoginTerminal": true,

  /* ---------------------- Shellcheck ---------------------- */
  "shellcheck.executablePath": "/opt/homebrew/bin/shellcheck",

  /* -------------------------------------------------------- */
  /*SECTION:                  NeoVim                          */
  /* -------------------------------------------------------- */
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  //"vscode-neovim.neovimExecutablePaths.windows": "C:\\path\\to\\nvim.exe"
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",

  /* ------------------ Neovim UI Modifier ------------------ */
  "nvim-ui.nvimColorNormal": "#fab387", // Peach – calm, default state
  "nvim-ui.nvimColorInsert": "#89b4fa", // Blue – active insertion, not alarming
  "nvim-ui.nvimColorVisual": "#cba6f7", // Mauve – selected/visual state
  "nvim-ui.nvimColorReplace": "#f38ba8", // Red – replace/destructive operation

  /* ------------------- NeoVim Dashboard ------------------- */
  "nvimDashboard.fontSize": 14,
  "nvimDashboard.keybinds": [
    {
      "letter": "f",
      "name": "files",
      "command": "workbench.action.quickOpen"
    },
    {
      "letter": "s",
      "name": "settings",
      "command": "workbench.action.openSettings"
    },
    {
      "letter": "q",
      "name": "exit",
      "command": "nvim-dashboard.close"
    }
  ],
  "nvimDashboard.openOnNoTabs": true,
  //!SECTION

  /* ------------------------------------------------------ */
  /*SECTION:               Spellcheck                       */
  /* ------------------------------------------------------ */
  "cSpell.enabled": true,
  "cSpell.language": "en, he",
  "cSpell.dictionaryDefinitions": [
    // npm install -g @cspell/dict-he
    {
      "name": "hebrew",
      "path": "/opt/homebrew/lib/node_modules/@cspell/dict-he/hebrew-words.txt",
      "description": "Hebrew words from cspell-dict-he",
      "addWords": false
    },
    // npm install -g @cspell/dict-python
    {
      "name": "python",
      "path": "/opt/homebrew/lib/node_modules/@cspell/dict-python/python.txt",
      "description": "Python dictionary words",
      "addWords": false
    },
    {
      "name": "python_dictionary",
      "path": "~/.config/cspell/dictionaries/user_dictionary_python.txt",
      "addWords": true,
      "scope": "user"
    },
    {
      "name": "general_dictionary",
      "path": "~/.config/cspell/dictionaries/user_dictionary_eng.txt",
      "addWords": true,
      "scope": "user"
    }
  ],
  // "cSpell.customDictionaries": {
  //   "user_dictionary_eng": {
  //     "name": "user_dictionary_eng",
  //     "path": "~/.config/cspell/dictionaries/user_dictionary_eng.txt",
  //     "addWords": true,
  //     "scope": "user"
  //   },
  //   "user_dictionary_python": {
  //     "name": "user_dictionary_python",
  //     "path": "~/.config/cspell/dictionaries/user_dictionary_python.txt",
  //     "addWords": true,
  //     "scope": "user"
  //   }
  // },
  "cSpell.languageSettings": [
    {
      "languageId": "python",
      "dictionaries": ["python"]
    },
    {
      "languageId": "javascript",
      "dictionaries": ["typescript", "node"]
    }
  ],
  "cSpell.dictionaries": [
    // User Defined
    "general_dictionary",
    "python_dictionary",
    // cSpell
    "hebrew",
    "python"
  ],
  "cSpell.ignorePaths": [
    "node_modules/**",
    "venv/**",
    ".venv/**",
    "__pycache__/**",
    "settings.json"
  ],
  "cSpell.ignoreWords": [
    "PREMADE",
    "canonizer",
    "esbenp",
    "libexec",
    "datacls",
    "docsimple",
    "enco",
    "exceptas",
    "ifmain",
    "jupy",
    "pyignore",
    "pyignoreany",
    "tryef"
  ],

  "spellright.addToSystemDictionary": true,
  "spellright.notificationClass": "warning",
  "spellright.configurationScope": "user",
  "spellright.language": ["en"],
  "spellright.documentTypes": ["markdown", "latex"],
  //!Section

  /* ------------------------------------------------------ */
  /*SECTION:           Formatter Settings                   */
  /* ------------------------------------------------------ */
  "prettier.documentSelectors": ["*/**.json"],
  "prettier.endOfLine": "lf",
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.semi": true,
  "prettier.singleAttributePerLine": true,
  "prettier.singleQuote": true,
  "prettier.bracketSameLine": true,

  "less.format.enable": false,
  "formatContextMenu.closeAfterSave": true,

  //SEGMENT - .editorconfig
  "editorconfig.generateAuto": true,
  "editorconfig.showMenuEntry": true,
  //!SEGMENT

  "shfmt.executablePath": "/opt/homebrew/bin/shfmt",
  "shellformat.path": "/opt/homebrew/bin/shfmt",

  //!SECTION

  /* ------------------------------------------------------ */
  /*SECTION:           Comment Extensions                   */
  /* ------------------------------------------------------ */
  "commentAnchors.tags.separators": [" - ", ": ", " "],
  "commentAnchors.tagHighlights.enabled": true,
  "commentAnchors.tags.displayHierarchyInWorkspace": true,
  "commentAnchors.tags.displayInGutter": true,
  "commentAnchors.tags.displayLineNumber": true,
  "commentAnchors.tags.endTag": "!",
  "commentAnchors.tags.matchPrefix": [
    "<!--",
    "//",
    "/*",
    "/**",
    "*",
    "#",
    "--"
  ],
  "commentAnchors.tags.anchors": {
    "ANCHOR": {
      "iconColor": "purple",
      "highlightColor": "#A8C023",
      "scope": "file"
    },
    "SECTION": {
      "iconColor": "blurple",
      "highlightColor": "#896afc",
      "styleMode": "full",
      "scope": "workspace",
      "behavior": "region"
    },
    "SEGMENT": {
      "iconColor": "blue",
      "highlightColor": "#3ea8ff",
      "styleMode": "full",
      "scope": "file",
      "behavior": "region"
    },
    "REVIEW": {
      "iconColor": "orange",
      "highlightColor": "#FFB300",
      "scope": "workspace"
    },
    "TODO": {
      "iconColor": "yellow",
      "highlightColor": "#3ea8ff",
      "scope": "workspace"
    },
    "FIXME": {
      "iconColor": "red",
      "highlightColor": "#F44336",
      "styleMode": "full",
      "scope": "workspace"
    },
    "STUB": {
      "iconColor": "teal",
      "highlightColor": "#BA68C8",
      "scope": "file"
    },
    // Information Tags
    "NOTE": {
      "iconColor": "green",
      "highlightColor": "#64DD17",
      "scope": "file"
    },
    "LINK": {
      "iconColor": "emerald",
      "highlightColor": "#2ecc71",
      "scope": "workspace",
      "behavior": "link"
    },
    "SOURCE": {
      "iconColor": "yellow",
      "highlightColor": "#2ecc71",
      "scope": "workspace",
      "behavior": "link"
    }
  },

  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": false,
  "better-comments.tags": [
    {
      "tag": "<>", // Section
      "color": "#F1FA8C",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": true
    },
    {
      "tag": "*", // Important
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "!", // Warning
      "color": "#FF5555",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?", // Question
      "color": "#b855ff",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],

  //SEGMENT - TODO Tree
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "type": "line"
    },
    "FIXME": {
      "iconColour": "#eed49f",
      "gutterIcon": true
    }
  },
  //!SEGMENT

  /* -------------------- Comment Divider ------------------- */
  // Docs: https://github.com/stackbreak/comment-divider
  "comment-divider.length": 64,

  // Set whether the divider will be shrink consider indent size,
  // or will be always fixed length.
  "comment-divider.shouldLengthIncludeIndent": true,

  /* -------------------- Main Header ------------------- */
  // Set symbol for main header line filling (only one).
  "comment-divider.mainHeaderFiller": "-",

  // Set main header vertical style.
  "comment-divider.mainHeaderHeight": "block",

  // Set main header text align.
  "comment-divider.mainHeaderAlign": "center",

  // Set main header text transform style.
  "comment-divider.mainHeaderTransform": "titlecase",

  /* --------------------- Subheader -------------------- */
  // Set symbol for subheader line filling (only one).
  "comment-divider.subheaderFiller": "-",

  // Set subheader vertical style.
  "comment-divider.subheaderHeight": "line",

  // Set subheader text align.
  "comment-divider.subheaderAlign": "center",

  // Set subheader text transform style.
  "comment-divider.subheaderTransform": "titlecase",
  "comment-divider.languagesMap": {
    "html": ["<!--", "-->"],
    "just": ["#", "#"],
    "justfie": ["#", "#"],
    "nu": ["#", "#"],
    "nushell": ["#", "#"],
    "lua": ["--", "--"],
    "py": ["#", "#"]
  },

