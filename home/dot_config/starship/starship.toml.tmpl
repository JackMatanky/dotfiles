# -----------------------------------------------------------------------------
# Filename: ~/.config/starship/starship.toml (managed by chezmoi)
# Enhanced with theme customization and platform awareness
# -----------------------------------------------------------------------------

# Get editor completions based on the config schema
"$schema" = 'https://starship.rs/config-schema.json'

format = """
[‚ï≠](fg:overlay1)\
$os\
$username\
$directory\
[](peach)\
$fill\
$cmd_duration\
[](yellow)\
$git_branch\
$git_status\
[](fg:green bg:yellow)\
$c\
$rust\
$golang\
$nodejs\
$php\
$java\
$kotlin\
$haskell\
$python\
[](fg:sapphire bg:green)\
$conda\
[](fg:blue bg:sapphire)\
$shell\
[](fg:lavender bg:blue)\
$battery\
$time
$character"""

# Use theme from chezmoi data
{{- if eq .theme.colorscheme "catppuccin_latte" }}
palette = 'catppuccin_latte'
{{- else if eq .theme.colorscheme "catppuccin_macchiato" }}
palette = 'catppuccin_macchiato'
{{- else if eq .theme.colorscheme "catppuccin_mocha" }}
palette = 'catppuccin_mocha'
{{- else }}
palette = 'catppuccin_macchiato'  # default fallback
{{- end }}

[line_break]
disabled = false

[os]
disabled = false
style = "bg:mauve fg:crust"
format = '[](fg:mauve)[$symbol ](bg:mauve fg:crust)[](bg:red fg:mauve)'

[os.symbols]
{{- if eq .chezmoi.os "darwin" }}
Macos = ""
{{- else if eq .chezmoi.os "linux" }}
Linux = ""
{{- end }}
Windows = "Û∞ç≤"

[username]
show_always = true
style_user = "bg:red fg:crust"
style_root = "bg:red fg:crust"
format = '[ $user ](bg:red fg:crust)[](bg:yellow fg:red)'

[directory]
style = "fg:crust bg:yellow"
format = "[ $path ]($style)[](fg:yellow bg:peach)"
truncation_length = 3
truncation_symbol = "‚Ä¶/"

[directory.substitutions]
{{- if .directories }}
{{- range $name, $path := .directories }}
"{{ $path }}" = " {{ $name }}"
{{- end }}
{{- end }}
"Documents" = "Û∞àô "
"Downloads" = " "
"Music" = "Û∞ùö "
"Pictures" = " "
"Developer" = "Û∞≤å "

[fill]
symbol = " "
style = "bold green"

[git_branch]
symbol = ""
style = "bg:yellow fg:crust"
format = '[[ $symbol $branch ](bg:yellow fg:crust)][](fg:yellow bg:green)'

[git_status]
style = "bg:yellow fg:crust"
format = '[[($all_status$ahead_behind )](bg:yellow fg:crust)][](fg:yellow bg:green)'

# Development language modules
{{- if .dev.use_rust }}
[rust]
symbol = ""
style = "bg:green fg:crust"
format = '[[ $symbol( $version) ](bg:green fg:crust)][](fg:green bg:sapphire)'
{{- end }}

{{- if .dev.use_python }}
[python]
symbol = ""
style = "bg:green fg:crust"
format = '[[ $symbol( $version) ](bg:green fg:crust)][](fg:green bg:sapphire)'
{{- end }}

{{- if .dev.use_node }}
