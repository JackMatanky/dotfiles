style = "bg:green fg:crust"
format = '[[ $symbol( $version) ](bg:green fg:crust)][](fg:green bg:sapphire)'

{{- if .dev.use_docker }}
[docker_context]
symbol = ""
style = "bg:sapphire fg:crust"
format = '[[ $symbol( $context) ](bg:sapphire fg:crust)][](fg:sapphire bg:blue)'
{{- end }}

{{- if .dev.use_kubernetes }}
[kubernetes]
symbol = "Û±Éæ"
style = "bg:sapphire fg:crust"
format = '[[ $symbol( $context) ](bg:sapphire fg:crust)][](fg:sapphire bg:blue)'
