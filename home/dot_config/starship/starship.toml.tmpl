{{- end }}

[conda]
style = "bg:sapphire fg:crust"
format = '[[ $symbol( $environment) ](bg:sapphire fg:crust)][](fg:sapphire bg:blue)'

[shell]
{{- if eq .preferences.shell "zsh" }}
zsh_indicator = "zsh"
{{- else if eq .preferences.shell "bash" }}
bash_indicator = "bash"
{{- end }}
fish_indicator = ""
powershell_indicator = "_"
style = "bg:blue fg:crust"
disabled = false
format = '[[ $indicator ](bg:blue fg:crust)][](fg:blue bg:lavender)'

[cmd_duration]
min_time = 500
style = "fg:crust bg:peach"
format = "[ $duration ](fg:crust bg:peach)"

[time]
disabled = false
time_format = "%R"
style = "bg:lavender fg:crust"
format = '[[  $time ](bg:lavender fg:crust)][](fg:lavender)'

{{- if eq .chezmoi.os "darwin" }}
[battery]
full_symbol = "üîã"
charging_symbol = "üîå"
discharging_symbol = "‚ö°"
unknown_symbol = "‚ùì"
empty_symbol = "ü™´"

[[battery.display]]
threshold = 10
style = "bold red"

[[battery.display]]
threshold = 30
style = "bold yellow"

[[battery.display]]
threshold = 100
style = "bold green"
{{- else }}
[battery]
disabled = true  # Often unreliable on Linux desktops
{{- end }}

[character]
disabled = false
success_symbol = '[‚ï∞‚îÄŒª](bold fg:green)'
error_symbol = '[‚ï∞‚îÄŒª](bold fg:red)'
